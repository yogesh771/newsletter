@model NewLetter.Models.qenSecondary

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="">
        <p class="blue-title">High School</p>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
                @Html.HiddenFor(model => model.qenID)           

        <div class="group">
                @Html.TextBoxFor(model => model.schoolName, new { placeholder = "School Name", maxlength = "100" })
            <div class="alert alert-warning error-custom" role="alert">
                @Html.ValidationMessageFor(model => model.schoolName, "", new { @class = "col_1 tleft text-danger" })
            </div>
        </div>

        <div class="group">
            @Html.TextBoxFor(model => model.secondaryBoard, new { placeholder = "Board Name", maxlength = "100" })
            <div class="alert alert-warning error-custom" role="alert">
                @Html.ValidationMessageFor(model => model.secondaryBoard, "", new { @class = "col_1 tleft text-danger" })
            </div>
        </div>


        <div class="group">
            @Html.TextBoxFor(model => model.secondarySubjects, new { placeholder = "Subjects", maxlength = "100" })
            <div class="alert alert-warning error-custom" role="alert">
                @Html.ValidationMessageFor(model => model.secondarySubjects, "", new { @class = "col_1 tleft text-danger" })
            </div>
        </div>

        <div class="group">
            @Html.TextBoxFor(m => m.secondaryPercentage, new { placeholder = "Percentage Obtained", maxlength = "3" })
            <div class="alert alert-warning error-custom" role="alert">
                @Html.ValidationMessageFor(m => m.secondaryPercentage, "", new { @class = "col_1 tleft text-danger" })
            </div>
        </div>
        <div class="group">
            @Html.TextBoxFor(m => m.secondaryPassYear, new { placeholder = "Passing Year", maxlength = "4" })
            <div class="alert alert-warning error-custom" role="alert">
                @Html.ValidationMessageFor(m => m.secondaryPassYear, "", new { @class = "col_1 tleft text-danger" })
            </div>
        </div>  

        <div class="group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr />

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>